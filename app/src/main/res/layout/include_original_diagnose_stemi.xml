<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin">

        <TextView
            android:id="@+id/give_up_cure"
            style="@style/tv_normal_titel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="患者自愿放弃治疗" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_give_up_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_give_up_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />

        </RadioGroup>
    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <com.xyj.strokeaid.view.TextTimeBar
        android:id="@+id/ttb_first_diagnose_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        app:bottomLineVisible="true"
        app:title="初步诊断时间" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/item_normal_margin">

        <TextView
            style="@style/tv_normal_titel"
            android:layout_width="@dimen/item_title_min_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/item_normal_margin"
            android:text="诊断医生" />

        <com.xyj.strokeaid.view.editspinner.EditSpinner
            android:id="@+id/es_diagnose_doc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:Background="@drawable/bg_view_frame"
            app:hint="请选择"
            app:rightImage="@drawable/ic_arrow_down_blue" />

    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/XyjTextTitel"
            android:text="心功能分级" />

        <RadioGroup
            android:id="@+id/rg_heart_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="vertical">


            <RadioButton
                android:id="@+id/rb_heart_func_level_1"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:tag="cpc_smtzkillip_I"
                android:text="I级(no CHF)" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_2"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:tag="cpc_smtzkillip_II"
                android:text="II级(rales and/or JVD)" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_3"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:tag="cpc_smtzkillip_III"
                android:text="III级(pulmonary edema)"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_4"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:tag="cpc_smtzkillip_IV"
                android:text="IV级(cardiogenic shock)" />

        </RadioGroup>

    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <LinearLayout
        android:id="@+id/ll_detour_emergent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal">

        <TextView
            style="@style/XyjTextSubTitel"
            android:text="绕行急诊" />


        <RadioGroup
            android:id="@+id/rg_detour_emergent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_detour_emergent_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_detour_emergent_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />
        </RadioGroup>
    </LinearLayout>


    <View style="@style/horizontal_divider" />


    <include
        android:id="@+id/ll_patien_detour_emergency"
        layout="@layout/layout_patient_detour_emergency"
        android:visibility="gone"></include>


    <include
        android:id="@+id/ll_patien_detour_emergency_no"
        layout="@layout/layout_patient_detour_emergency_no"
        android:visibility="gone"></include>


    <!--绕行急诊 是-->
    <LinearLayout
        android:id="@+id/ll_detour_emergent_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/item_normal_margin">

            <TextView
                style="@style/XyjTextSubTitel"
                android:text="直达科室" />


            <com.xyj.strokeaid.view.editspinner.EditSpinner
                android:id="@+id/es_detour_emergent_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:Background="@drawable/bg_view_frame"
                app:hint="请选择"
                app:rightImage="@drawable/ic_arrow_down_blue" />

        </LinearLayout>

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:bottomLineVisible="true"
            app:title="到达时间" />

    </LinearLayout>

    <!--绕行急诊 否-->
    <LinearLayout
        android:id="@+id/ll_detour_emergent_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_arrive_emergent_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:title="到达急诊时间" />

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_leave_emergent_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:title="离开急诊时间" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/item_normal_margin">

            <TextView
                style="@style/XyjTextSubTitel"
                android:text="急诊离开去向" />


            <com.xyj.strokeaid.view.editspinner.EditSpinner
                android:id="@+id/es_emergent_leave_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:gravity="center_vertical"
                app:Background="@drawable/bg_view_frame"
                app:hint="请选择"
                app:rightImage="@drawable/ic_arrow_down_blue" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <!--绕行ccu-->
    <LinearLayout
        android:id="@+id/detour_ccu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal">

        <TextView
            style="@style/XyjTextSubTitel"
            android:text="绕行CCU" />

        <RadioGroup
            android:id="@+id/rg_detour_ccu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_detour_ccu_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_detour_ccu_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />
        </RadioGroup>

    </LinearLayout>

    <include layout="@layout/layout_patient_detour_cuu"></include>

    <LinearLayout
        android:id="@+id/ll_fdmss"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            style="@style/XyjTextSubTitel"
            android:text="危险分层" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.MyRadioGroup
                android:id="@+id/mrg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_low_danger"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_fdmss_dw"
                            android:text="低危" />


                        <RadioButton
                            android:id="@+id/rb_center_danger"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_fdmss_zw"
                            android:text="中危" />


                        <RadioButton
                            android:id="@+id/rb_high_danger"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_fdmss_gw"
                            android:text="高危" />


                    </LinearLayout>


                </LinearLayout>


            </com.xyj.strokeaid.view.MyRadioGroup>

        </LinearLayout>


        <View style="@style/horizontal_divider" />


        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/tv_arrival_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_large_height"
            app:bottomLineVisible="true"
            app:title="开始抗凝治疗时间 " />


        <TextView
            style="@style/XyjTextSubTitel"
            android:text="溶栓筛查" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.MyRadioGroup
                android:id="@+id/mrg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:orientation="horizontal">


                        <RadioButton
                            android:id="@+id/rb_suitable"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_rsscjg_hs"
                            android:text="合适" />

                        <RadioButton
                            android:id="@+id/rb_unsuitable"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_rsscjg_bhs"
                            android:text="不合适" />


                        <RadioButton
                            android:id="@+id/rb_no_screening"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_rsscjg_wsc"
                            android:text="未筛查" />


                    </LinearLayout>


                </LinearLayout>


            </com.xyj.strokeaid.view.MyRadioGroup>

        </LinearLayout>


        <TextView
            style="@style/XyjTextSubTitel"
            android:text="溶栓治疗" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.MyRadioGroup
                android:id="@+id/mrg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_hava"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_exist_true"
                            android:text="有" />

                        <RadioButton
                            android:id="@+id/rb_no"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:tag="cpc_exist_false"
                            android:text="无" />

                        <RadioButton
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:button="@null"
                            android:tag="cpc_zdksv2_xnkbf" />


                    </LinearLayout>


                </LinearLayout>


            </com.xyj.strokeaid.view.MyRadioGroup>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>