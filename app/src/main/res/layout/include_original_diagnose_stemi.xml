<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin">

        <TextView
            android:id="@+id/give_up_cure"
            style="@style/tv_normal_titel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="患者自愿放弃治疗" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_give_up_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_give_up_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />

        </RadioGroup>
    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <com.xyj.strokeaid.view.TextTimeBar
        android:id="@+id/ttb_first_diagnose_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        app:bottomLineVisible="true"
        app:title="初步诊断时间" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/item_normal_margin">

        <TextView
            style="@style/tv_normal_titel"
            android:layout_width="@dimen/item_title_min_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/item_normal_margin"
            android:text="诊断医生" />

        <com.xyj.strokeaid.view.editspinner.EditSpinner
            android:id="@+id/es_diagnose_doc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:Background="@drawable/bg_view_frame"
            app:hint="请选择"
            app:rightImage="@drawable/ic_arrow_down_blue" />

    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/XyjTextTitel"
            android:text="心功能分级" />

        <RadioGroup
            android:id="@+id/rg_heart_func"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_heart_func_level_1"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:text="I级(no CHF)" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_2"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:text="II级(rales and/or JVD)" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_3"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:text="III级(pulmonary edema)"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_heart_func_level_4"
                style="@style/XyjRadionButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:text="IV级(cardiogenic shock)" />

        </RadioGroup>

    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal">

        <TextView
            style="@style/XyjTextSubTitel"
            android:text="绕行急诊" />


        <RadioGroup
            android:id="@+id/rg_detour_emergent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_detour_emergent_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_detour_emergent_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />
        </RadioGroup>
    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <!--绕行急诊 是-->
    <LinearLayout
        android:id="@+id/ll_detour_emergent_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/item_normal_margin">

            <TextView
                style="@style/XyjTextSubTitel"
                android:text="直达科室" />


            <com.xyj.strokeaid.view.editspinner.EditSpinner
                android:id="@+id/es_detour_emergent_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                app:Background="@drawable/bg_view_frame"
                app:hint="请选择"
                app:rightImage="@drawable/ic_arrow_down_blue" />

        </LinearLayout>

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_arrive_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:bottomLineVisible="true"
            app:title="到达时间" />

    </LinearLayout>

    <!--绕行急诊 否-->
    <LinearLayout
        android:id="@+id/ll_detour_emergent_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_arrive_emergent_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:title="到达急诊时间" />

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/ttb_leave_emergent_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:title="离开急诊时间" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:orientation="horizontal"
            android:paddingEnd="@dimen/item_normal_margin">

            <TextView
                style="@style/XyjTextSubTitel"
                android:text="急诊离开去向" />


            <com.xyj.strokeaid.view.editspinner.EditSpinner
                android:id="@+id/es_emergent_leave_to"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:gravity="center_vertical"
                app:Background="@drawable/bg_view_frame"
                app:hint="请选择"
                app:rightImage="@drawable/ic_arrow_down_blue" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <!--绕行ccu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:orientation="horizontal">

        <TextView
            style="@style/XyjTextSubTitel"
            android:text="绕行CCU" />

        <RadioGroup
            android:id="@+id/rg_detour_ccu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_normal_margin"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_detour_ccu_yes"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="是" />

            <RadioButton
                android:id="@+id/rb_detour_ccu_no"
                style="@style/XyjRadionButtonHorizontalWeight"
                android:text="否" />
        </RadioGroup>

    </LinearLayout>

    <com.xyj.strokeaid.view.TextTimeBar
        android:id="@+id/ttb_arrive_ccu_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:visibility="gone"
        app:bottomLineVisible="true"
        app:title="到达CCU时间" />


</LinearLayout>