<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_6_with_white"
    android:padding="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_name_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_patient_text_height"
        android:gravity="center"
        android:minWidth="40dp"
        android:textColor="@color/color_222222"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="患者202008082017" />

    <ImageView
        android:id="@+id/iv_sex_item_patient"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:src="@drawable/icon_sex_man"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_item_patient"
        app:layout_constraintStart_toEndOf="@id/tv_name_item_patient"
        app:layout_constraintTop_toTopOf="@id/tv_name_item_patient" />

    <TextView
        android:id="@+id/tv_age_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_12"
        android:text="@string/patient_age_with_para"
        android:textColor="@color/color_222222"
        android:textSize="13sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_item_patient"
        app:layout_constraintStart_toEndOf="@id/iv_sex_item_patient" />

    <TextView
        android:id="@+id/tv_disease_type_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:background="@drawable/shape_primary_color_stroke_corner_12"
        android:gravity="center"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_2"
        android:text="@string/disease_type_stroke"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_item_patient"
        app:layout_constraintStart_toEndOf="@id/tv_age_item_patient"
        app:layout_constraintTop_toTopOf="@id/tv_name_item_patient" />

    <TextView
        android:id="@+id/tv_start_time_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_patient_text_height"
        android:gravity="center"
        android:text="@string/patient_start_disease_time"
        android:textColor="@color/color_222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_patient" />

    <TextView
        android:id="@+id/tv_end_time_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_patient_text_height"
        android:gravity="center"
        android:text="@string/patient_start_green_channel"
        android:textColor="@color/color_222222"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time_item_patient" />

    <View
        style="@style/horizontal_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_time_item_patient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:background="@drawable/shape_primary_color_stroke_corner_3"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:textSize="@dimen/text_common_size"
        android:layout_marginTop="@dimen/dp_5"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tv_end_time_item_patient"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="查看详情"/>

</androidx.constraintlayout.widget.ConstraintLayout>