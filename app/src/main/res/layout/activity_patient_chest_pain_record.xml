<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    tools:context=".activity.common.PatientChestPainRecordActivity">

    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/title_bar_act_pcpr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:title="张江流(男-58-胸痛)" />

    <include
        android:id="@+id/ll_time_act_pcpr"
        layout="@layout/include_chronometer_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_bar_act_pcpr" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu_act_pcpr"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/shape_patient_record_menu_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_time_act_pcpr"
        tools:listitem="@layout/adapter_green_channel_menu_item" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_content_act_pcpr"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_menu_act_pcpr"
        app:layout_constraintTop_toTopOf="@+id/rv_menu_act_pcpr" />

</androidx.constraintlayout.widget.ConstraintLayout>