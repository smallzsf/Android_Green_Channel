    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_menu_act_pgc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_time_act_pgc"
        tools:listitem="@layout/adapter_green_channel_menu_item" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/dp_1"
        android:layout_height="wrap_content"
        android:background="@color/color_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vp_content_act_pgc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/rv_menu_act_pgc"
        app:layout_constraintTop_toTopOf="@+id/vp_content_act_pgc"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_content_act_pgc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_menu_act_pgc"
        app:layout_constraintTop_toTopOf="@+id/rv_menu_act_pgc" />

