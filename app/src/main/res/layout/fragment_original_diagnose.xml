<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin">

        <TextView
            style="@style/tv_normal_titel"
            android:layout_width="@dimen/item_title_min_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="诊断" />

        <com.xyj.strokeaid.view.editspinner.EditSpinner
            android:id="@+id/es_title_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:Background="@drawable/bg_view_frame"
            app:hint="请选择"
            app:rightImage="@drawable/ic_arrow_down_blue" />

    </LinearLayout>

    <View style="@style/horizontal_divider" />

    <FrameLayout
        android:id="@+id/fl_content_frag_od"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>