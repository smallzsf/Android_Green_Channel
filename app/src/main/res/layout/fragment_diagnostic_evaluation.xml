                    <com.xyj.strokeaid.view.editspinner.EditSpinner
                        android:id="@+id/et_ischemic_stroke"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:Background="@drawable/bg_view_frame"
