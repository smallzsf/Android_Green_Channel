                        android:layout_height="wrap_content"
                        android:layout_marginRight="32dp"
                        android:text="发病机制"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />


                    <com.xyj.strokeaid.view.editspinner.EditSpinner
                        android:id="@+id/et_nosogenesis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:Background="@drawable/bg_view_frame"
                        app:hint="请选择"
                        app:rightImage="@drawable/ic_arrow_down_blue" />


                </LinearLayout>

                <include layout="@layout/include_line" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_moyamoya_disease"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_below="@+id/doctor_name_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="wrap_content"
                        android:text="烟雾病"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />

                    <RadioGroup
                        android:id="@+id/rg_moyamoya_disease"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_moyamoya_disease_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="是"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_moyamoya_disease_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="否"
                            android:textSize="@dimen/item_content_size" />

                    </RadioGroup>


                </LinearLayout>

                <include layout="@layout/include_line" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:text="诊断时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <TextView
                    android:id="@+id/app_tv_editSpinner_time"
                    style="@style/patient_et_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="2.4"
                    android:focusable="false"
                    android:hint="@string/app_default_time_example"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/item_content_size" />

                <ImageView
                    android:id="@+id/iv_refresh"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/ic_refresh" />
            </LinearLayout>

            <include layout="@layout/include_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="急诊医生"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:id="@+id/es_emergency_treatment_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue" />


            </LinearLayout>

            <include layout="@layout/include_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="卒中医生"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:id="@+id/es_apoplexy_doctor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue" />


            </LinearLayout>

            <include layout="@layout/include_line" />


        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/sv_discharge_diagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:text="出院时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <TextView
                    style="@style/patient_et_style"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="2.4"
                    android:focusable="false"
                    android:hint="@string/app_default_time_example"
                    android:paddingLeft="@dimen/dp_10"
                    android:textSize="@dimen/item_content_size" />

                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    android:src="@drawable/ic_refresh" />
            </LinearLayout>

            <include layout="@layout/include_line" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="出院时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue" />


            </LinearLayout>


            <include layout="@layout/include_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="@string/app_emergency_docotor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_title_size" />


                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/triage_time"
                android:background="@color/app_eef3f7" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="@string/app_emergency_docotor"
                    android:textColor="@color/white"
                    android:textSize="@dimen/item_title_size" />


                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue" />


            </LinearLayout>

            <include layout="@layout/include_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="急诊医生"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
