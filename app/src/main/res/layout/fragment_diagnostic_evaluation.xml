<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_diagnostic_evaluation"
    tools:context=".fragment.DiagnosticEvaluationFragment">

    <ScrollView
        android:id="@+id/sv_admitting_diagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">

                <TextView
                    android:layout_width="@dimen/dp_68"
                    android:layout_height="wrap_content"
                    android:text="起病方式"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/tab_text_size" />

                <RadioGroup
                    android:id="@+id/rg_have_disease_way"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_acute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="急性"
                        android:textSize="@dimen/item_content_size" />

                    <RadioButton
                        android:id="@+id/rb_progressivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="进展性"
                        android:textSize="@dimen/item_content_size" />

                </RadioGroup>


            </LinearLayout>

            <include layout="@layout/include_line" />

            <LinearLayout
                android:id="@+id/ll_progress_site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_below="@+id/doctor_name_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="@dimen/dp_68"
                        android:layout_height="wrap_content"
                        android:text="进展地点"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />

                    <RadioGroup
                        android:id="@+id/rg_progress_site"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_court"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="院内"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_lobby"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="院外"
                            android:textSize="@dimen/item_content_size" />

                    </RadioGroup>


                </LinearLayout>

                <include layout="@layout/include_line" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_below="@+id/doctor_name_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="14dp"
                        android:text="诊断时间"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />

                    <TextView
                        style="@style/patient_et_style"
                        android:layout_width="@dimen/dp_0"
                        android:layout_weight="2.4"
                        android:focusable="false"
                        android:hint="@string/app_default_time_example"
                        android:paddingLeft="@dimen/dp_10"
                        android:textSize="@dimen/item_content_size" />

                    <ImageView
                        android:id="@+id/iv_refresh1"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="4dp"
                        android:paddingTop="2dp"
                        android:paddingRight="4dp"
                        android:paddingBottom="2dp"
                        android:src="@drawable/ic_refresh" />
                </LinearLayout>


                <include layout="@layout/include_line" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_below="@+id/doctor_name_line"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_25"
                android:paddingRight="@dimen/dp_10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="32dp"
                    android:text="诊断结果"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />

                <com.xyj.strokeaid.view.editspinner.EditSpinner
                    android:id="@+id/es_diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    app:Background="@drawable/bg_view_frame"
                    app:hint="请选择"
                    app:rightImage="@drawable/ic_arrow_down_blue"
                    tools:ignore="Deprecated" />


            </LinearLayout>

            <include layout="@layout/include_line" />

            <LinearLayout
                android:id="@+id/ll_other_diagnostic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_below="@+id/doctor_name_line"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_25"
                    android:paddingRight="@dimen/dp_10">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_25"
                        android:text="其它(诊断)"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />

                    <EditText
                        android:id="@+id/et_input_weight"
                        style="@style/patient_et_style"
                        android:layout_width="wrap_content"
                        android:gravity="start"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="10"
                        android:textSize="@dimen/item_content_size" />


                </LinearLayout>

                <include layout="@layout/include_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_hemorrhagic_apoplexy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_below="@+id/doctor_name_line"
