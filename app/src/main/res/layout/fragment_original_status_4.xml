<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/layout_original_top" />

        <View style="@style/horizontal_divider" />

        <include layout="@layout/layout_check_shadow" />

        <View style="@style/horizontal_divider" />

        <include layout="@layout/layout_ct" />
        <View style="@style/horizontal_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:layout_margin="@dimen/dp_12">

            <TextView
                android:id="@+id/tv_danger"
                android:layout_width="@dimen/dp_71"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="危险分层"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_title_size" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_danger_high"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="高危"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_danger_mid"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="中危"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_danger_low"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="低危"
                    android:textSize="@dimen/item_content_size" />
            </RadioGroup>
        </LinearLayout>

        <View style="@style/horizontal_divider" />

        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/tv_cure_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            app:title="开始抗凝剂治疗时间" />

        <View style="@style/horizontal_divider" />
        <!--治疗策略-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_normal_margin"
            android:layout_marginRight="@dimen/item_normal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_strategy"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="溶栓筛查"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_title_size" />


            <RadioGroup
                android:id="@+id/rg_strategy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_strategy_3"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="合适"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_strategy_4"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="不合适"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_strategy_5"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="未筛查"
                    android:textSize="@dimen/item_content_size" />
            </RadioGroup>

        </LinearLayout>

        <View style="@style/horizontal_divider" />

        <LinearLayout
            android:id="@+id/ll_taboo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:layout_margin="@dimen/dp_12"
            android:layout_marginLeft="@dimen/item_normal_margin"
            android:layout_marginRight="@dimen/item_normal_margin"
            android:background="@drawable/shape_edittext_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_exist_taboo_label"
                android:layout_width="@dimen/dp_90"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="存在禁忌症"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_title_size" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_taboo_yes"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="是"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_taboo_no"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="否"
                    android:textSize="@dimen/item_content_size" />
            </RadioGroup>
        </LinearLayout>

        <View style="@style/horizontal_divider" />

        <include layout="@layout/view_two_horizontal_bottom_button" />
    </LinearLayout>


</androidx.core.widget.NestedScrollView>