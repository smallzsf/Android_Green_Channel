<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_normal_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_normal_height"
        android:gravity="center"
        android:text="影像学检查"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/item_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:gravity="center_horizontal">

        <CheckBox
            android:id="@+id/cb_shadow_text_1"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="急诊CT"
            android:textSize="@dimen/item_content_size" />


        <CheckBox
            android:id="@+id/cb_shadow_text_2"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="彩超"
            android:textSize="@dimen/item_content_size" />

        <CheckBox
            android:id="@+id/cb_shadow_text_3"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="MRI"
            android:textSize="@dimen/item_content_size" />

        <CheckBox
            android:id="@+id/cb_shadow_text_4"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="未做"
            android:textSize="@dimen/item_content_size" />


    </LinearLayout>


</LinearLayout>