            android:id="@+id/es_left"
            android:layout_width="80dp"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/awareness"
            android:gravity="center"
            app:Background="@drawable/bg_view_frame"
            app:hint="请选择"
            app:rightImage="@drawable/ic_arrow_down_blue" />


        <EditText
            android:id="@+id/et_emergency_ward"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_bg"
            android:gravity="left"
            android:hint="单行输入"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/item_content_size" />

