<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



        <!--诊断-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
            android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

            <TextView
                android:id="@+id/give_up_cure"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="患者自愿放弃治疗"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_title_size" />


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <RadioButton
                    android:id="@+id/rb_blood_frag_ae"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="是"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_ct_frag_ae"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="否"
                    android:textSize="@dimen/item_content_size"
                    />
            </RadioGroup>
        </LinearLayout>
        <include layout="@layout/include_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/vital_sign_item_height"
            android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
            android:layout_marginRight="@dimen/sp_15">

            <TextView
                android:id="@+id/tv_first_cure"
                android:layout_width="@dimen/tooltip_precise_anchor_threshold"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="初次诊断时间"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_title_size" />


            <TextView
                android:id="@+id/tv_draw_blood_time"
                style="@style/patient_et_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_first_cure"
                android:focusable="false"
                android:gravity="center|right"
                android:hint="@string/app_default_time_example"
                android:text="选取时间"
                android:textColor="@color/app_223b53"
                android:textSize="@dimen/item_content_size" />


        </RelativeLayout>

        <include layout="@layout/include_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_15">

            <TextView
                android:layout_width="@dimen/dp_68"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="诊断医生"
                android:textColor="#223b53"
                android:textSize="@dimen/item_title_size" />


            <EditText
                android:id="@+id/et_emergency_ward"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_bg"
                android:gravity="left"
                android:hint="单行输入"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/item_content_size" />

            <TextView
                android:id="@+id/tv_emergency_ward"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20"
                android:text="选择"
                android:visibility="gone"/>


        </LinearLayout>

        <include layout="@layout/include_line" />


</LinearLayout>