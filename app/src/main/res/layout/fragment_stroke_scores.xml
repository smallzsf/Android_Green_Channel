<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.StrokeNihssFragment">

    <include
        android:id="@+id/include_bottom_view"
        layout="@layout/view_two_horizontal_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_8" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/include_bottom_view"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_before_disease_mrs_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:nib_score_visible="true"
                app:title="发病前mRS评分" />

            <View style="@style/horizontal_divider" />

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_in_hos_mrs_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="入院mRS评分" />

            <View style="@style/horizontal_divider" />

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_24_mrs_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="溶栓后24h mRS评分" />

            <View style="@style/horizontal_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_ih_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_normal_height"
                    android:text="入院GCS评分" />


                <TextView
                    android:id="@+id/tv_ih_score_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    tools:text="5" />

                <ImageView
                    android:id="@+id/iv_ih_arrow_frag_ss"
                    android:layout_width="@dimen/item_normal_height"
                    android:layout_height="@dimen/item_normal_height"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_down_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ih_contain_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:visibility="gone">

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_ih_gcs_eye_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="睁眼状态" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_EEEEEE" />

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_ih_gcs_speak_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="语言状态" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/color_EEEEEE" />

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_ih_gcs_sport_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="运动状态" />

            </LinearLayout>

            <View style="@style/horizontal_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_lh_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    android:text="住院GCS评分" />


                <TextView
                    android:id="@+id/tv_lh_score_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    tools:text="5" />

                <ImageView
                    android:id="@+id/iv_lh_arrow_frag_ss"
                    android:layout_width="@dimen/item_normal_height"
                    android:layout_height="@dimen/item_normal_height"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_down_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_lh_contain_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:visibility="gone">

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_lh_gcs_eye_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="睁眼状态" />

                <View style="@style/horizontal_divider" />

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_lh_gcs_speak_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="语言状态" />

                <View style="@style/horizontal_divider" />

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_lh_gcs_sport_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="运动状态" />

            </LinearLayout>

            <View style="@style/horizontal_divider" />

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_in_hos_fisher_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="入院Fisher分级" />

            <View style="@style/horizontal_divider" />


            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_live_hunt_hess_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="住院Hunt-Hess评分" />

            <View style="@style/horizontal_divider" />

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_live_chads2_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="住院CHADS2评分" />

            <View style="@style/horizontal_divider" />

            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_has_bled_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="HAS-BLED评分" />

            <View style="@style/horizontal_divider" />


            <com.xyj.strokeaid.view.NihssItemBar
                android:id="@+id/nib_wada_swallowing_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="洼田吞咽评定" />

            <View style="@style/horizontal_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12">

                <TextView
                    android:id="@+id/tv_sm_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_normal_height"
                    android:text="Spetzler-Marin评分" />


                <TextView
                    android:id="@+id/tv_sm_score_title_frag_ss"
                    style="@style/tv_normal_titel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginEnd="@dimen/dp_12"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    tools:text="5" />

                <ImageView
                    android:id="@+id/iv_sm_arrow_frag_ss"
                    android:layout_width="@dimen/item_normal_height"
                    android:layout_height="@dimen/item_normal_height"
                    android:scaleType="center"
                    android:src="@drawable/ic_arrow_down_blue" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sm_contain_frag_ss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:visibility="gone">

                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_sm_volume_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="体积" />

                <View style="@style/horizontal_divider" />


                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_sm_position_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="位置" />

                <View style="@style/horizontal_divider" />


                <com.xyj.strokeaid.view.NihssItemBar
                    android:id="@+id/nib_sm_deep_frag_ss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="深静脉引流" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/color_EEEEEE" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>