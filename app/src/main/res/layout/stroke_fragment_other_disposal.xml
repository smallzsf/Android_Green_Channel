<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_recovery_frag_od"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.xyj.strokeaid.view.TextSwitchBar
                    android:id="@+id/tsb_accept_recovery_frag_od"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/colorPrimary22"
                    app:tsb_switch="false"
                    app:tsb_title="接受康复治疗" />

                <LinearLayout
                    android:id="@+id/ll_recovery_type_frag_od"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_12"
                    android:visibility="visible">

                    <TextView
                        style="@style/tv_normal_titel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:gravity="center_vertical"
                        android:text="康复治疗方式" />

                    <CheckBox
                        android:id="@+id/cb_tradition_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="传统康复（针灸 、推拿）" />

                    <CheckBox
                        android:id="@+id/cb_pt_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="运动疗法（PT）" />

                    <CheckBox
                        android:id="@+id/cb_ot_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="作业疗法（OT）" />

                    <CheckBox
                        android:id="@+id/cb_st_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="言语训练（ST）" />

                    <CheckBox
                        android:id="@+id/cb_other_recovery_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="其他（认知训练、吞咽治疗、心理治疗、理疗）" />

                    <View style="@style/horizontal_divider" />

                    <TextView
                        style="@style/tv_normal_titel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:gravity="center_vertical"
                        android:text="康复治疗场所" />

                    <CheckBox
                        android:id="@+id/cb_bedside_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="床旁" />

                    <CheckBox
                        android:id="@+id/cb_recovery_depart_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="康复科" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_edu_frag_od"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">

                <com.xyj.strokeaid.view.TextSwitchBar
                    android:id="@+id/tsb_edu_frag_od"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/colorPrimary22"
                    app:tsb_switch="false"
                    app:tsb_title="健康宣教" />

                <LinearLayout
                    android:id="@+id/ll_edu_type_frag_od"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_12"
                    android:visibility="visible">

                    <TextView
                        style="@style/tv_normal_titel"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:gravity="left|center"
                        android:text="宣教方式：" />

                    <CheckBox
                        android:id="@+id/cb_group_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="集体病区教育" />

                    <CheckBox
                        android:id="@+id/cb_one_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="一对一教育" />

                    <CheckBox
                        android:id="@+id/cb_other_edu_frag_od"
                        style="@style/XyjCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:text="其他" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttom_normal_height"
        android:layout_margin="@dimen/item_normal_margin"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>