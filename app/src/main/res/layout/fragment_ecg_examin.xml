<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_auxiliary_exam"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_normal_titel"
                    android:layout_width="@dimen/item_title_min_width"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="心电图" />

                <RadioGroup
                    android:id="@+id/rg_electrocardiogram"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="52dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rb_electrocardiogram_has"
                        style="@style/XyjRadionButtonHorizontalWeight"
                        android:text="有" />

                    <RadioButton
                        android:id="@+id/rb_electrocardiogram_none"
                        style="@style/XyjRadionButtonHorizontalWeight"
                        android:text="无" />

                </RadioGroup>

                <ImageView
                    android:id="@+id/iv_add_ecg_record"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginEnd="@dimen/item_normal_margin"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_add" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ecg_record_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_6"
                android:background="@drawable/shape_edittext_bg"
                android:orientation="vertical">

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_check_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:bottomLineVisible="true"
                    tl:title="心电检查时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_diagnosis_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:bottomLineVisible="true"
                    tl:title="心电图诊断时间" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:text="心电图诊断结论"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/item_title_size" />


                <View style="@style/horizontal_divider" />

                <EditText
                    android:id="@+id/ed_ecg_diagnosis_conclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_grey_stroke_with_white_bg"
                    android:layout_margin="12dp"
                    android:gravity="top"
                    android:hint="请输入心电图诊断结论..."
                    android:maxLength="300"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:textColor="@color/color_222222"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/item_content_size" />

                <View style="@style/horizontal_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="心电报告文件"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="上传"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ecg_record_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/shape_edittext_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_ecg_record_close_two"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="right"
                    android:padding="@dimen/dp_11"
                    android:src="@drawable/ic_close">

                </ImageView>

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_check_time1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    tl:title="心电检查时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_diagnosis_time1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    tl:title="心电图诊断时间" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="center"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:minWidth="60dp"
                    android:text="心电报告"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/item_title_size" />

                <View style="@style/horizontal_divider" />

                <EditText
                    android:id="@+id/ed_ecg_diagnosis_conclusion1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/shape_grey_stroke_with_white_bg"
                    android:gravity="top"
                    android:hint="请输入诊断报告结果..."
                    android:maxLength="300"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:textColor="@color/color_222222"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/item_content_size" />

                <View style="@style/horizontal_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:text="心电报告文件"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="上传"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ecg_record_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/shape_edittext_bg"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/iv_ecg_record_close_three"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_gravity="right"
                    android:padding="@dimen/dp_11"
                    android:src="@drawable/ic_close">

                </ImageView>

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_check_time2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    android:background="@color/white"
                    tl:title="心电检查时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/ttbl_ecg_diagnosis_time2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginLeft="@dimen/dp_1"
                    android:layout_marginRight="@dimen/dp_1"
                    tl:title="心电图诊断时间" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginStart="@dimen/dp_12"
                    android:gravity="center"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:minWidth="60dp"
                    android:text="心电报告"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/item_title_size" />

                <View style="@style/horizontal_divider" />

                <EditText
                    android:id="@+id/ed_ecg_diagnosis_conclusion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/shape_grey_stroke_with_white_bg"
                    android:gravity="top"
                    android:hint="请输入诊断报告结果..."
                    android:maxLength="300"
                    android:minHeight="100dp"
                    android:padding="10dp"
                    android:textColor="@color/color_222222"
                    android:textColorHint="@color/color_999999"
                    android:textSize="@dimen/item_content_size" />

                <View style="@style/horizontal_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="心电报告文件"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_marginStart="@dimen/dp_12"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="上传"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Text_Blue_Content_Style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:gravity="center_vertical"
                    android:text="远程心电传输"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/item_title_size" />

                <RadioGroup
                    android:id="@+id/rg_ecg_transmission"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rb_ecg_transmission_120"
                        style="@style/tv_small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:checked="true"
                        android:text="接收120/网络医院心电图"
                        android:textSize="@dimen/item_content_size" />

                    <RadioButton
                        android:id="@+id/rb_ecg_transmission_none"
                        style="@style/tv_small"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="未传输"
                        android:textSize="@dimen/item_content_size" />

                </RadioGroup>

                <com.xyj.strokeaid.view.TextTimeBar
                    android:id="@+id/rtb_ecg_receiving_time"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:bottomLineVisible="true"
                    app:title="接收时间"
                    app:topLineVisible="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vital_sign_item_height"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/item_title_min_width"
                        android:layout_height="@dimen/item_normal_height"
                        android:gravity="center_vertical"
                        android:text="传输方式"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <com.xyj.strokeaid.view.editspinner.EditSpinner
                        android:id="@+id/es_vital_sign_aware"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        app:Background="@drawable/bg_view_frame"
                        app:hint="请选择"
                        app:rightImage="@drawable/ic_arrow_down_blue" />


                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_height" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/view_two_horizontal_bottom_button" />

</LinearLayout>