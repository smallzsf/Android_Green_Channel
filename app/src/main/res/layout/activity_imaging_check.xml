<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.detection.ImagingCheckActivity">
    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/title_bar_image_check"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:layout_constraintTop_toTopOf="parent"
        app:title="影像检查"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_title_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextAppearance="@style/tab_layout_text"
        app:tabTextColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/title_bar_image_check"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_content_act_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/tl_title_image"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>