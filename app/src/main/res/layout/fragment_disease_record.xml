<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llVitalSigns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/item_normal_height"
                        android:paddingStart="@dimen/dp_12"
                        android:paddingEnd="@dimen/dp_12">

                        <ImageView
                            android:id="@+id/iv_arrow_view_nib"
                            android:layout_width="@dimen/item_normal_height"
                            android:layout_height="@dimen/item_normal_height"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:scaleType="center"
                            android:src="@drawable/ic_arrow_down_blue" />

                        <TextView
                            android:id="@+id/tv_title_view_nib"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/item_normal_height"
                            android:layout_alignParentStart="true"
                            android:layout_marginEnd="@dimen/dp_12"
                            android:layout_toStartOf="@id/iv_arrow_view_nib"
                            android:gravity="center_vertical"
                            android:maxLength="10"
                            android:maxLines="2"
                            android:textColor="@color/color_222222"
                            android:textSize="@dimen/item_title_size"
                            tools:text="肌钙蛋白" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="肌钙蛋白"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <RadioGroup
                        android:id="@+id/rg_consultation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_marginRight="@dimen/dp_12"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rb_troponin"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="是"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_troponin_none"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="否"
                            android:textSize="@dimen/item_content_size" />

                    </RadioGroup>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="新增检查记录"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                </LinearLayout>

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="抽血送检时间（肌钙蛋白）" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="报告完成时间（肌钙蛋白）" />
                <ListView
                    android:id="@+id/listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:cacheColorHint="@color/transparent"
                    android:listSelector="@color/transparent"
                    android:scrollbars="none"></ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                <RelativeLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:minHeight="@dimen/item_normal_height"-->
                <!--                    android:paddingStart="@dimen/dp_12"-->
                <!--                    android:paddingEnd="@dimen/dp_12">-->

                <!--                    <ImageView -->
                <!--                        android:layout_width="@dimen/item_normal_height"-->
                <!--                        android:layout_height="@dimen/item_normal_height"-->
                <!--                        android:layout_alignParentTop="true"-->
                <!--                        android:layout_alignParentEnd="true"-->
                <!--                        android:scaleType="center"-->
                <!--                        android:src="@drawable/ic_arrow_down_blue" />-->

                <!--                    <TextView -->
                <!--                        android:layout_width="wrap_content"-->
                <!--                        android:layout_height="@dimen/item_normal_height"-->
                <!--                        android:layout_alignParentStart="true"-->
                <!--                        android:layout_marginEnd="@dimen/dp_12"-->
                <!--                        android:layout_toStartOf="@id/iv_arrow_view_nib"-->
                <!--                        android:gravity="center_vertical"-->
                <!--                        android:maxLength="10"-->
                <!--                        android:maxLines="2"-->
                <!--                        android:textColor="@color/color_222222"-->
                <!--                        android:textSize="@dimen/item_title_size"-->
                <!--                        tools:text="肌钙蛋白" />-->


                <!--                </RelativeLayout>-->


            </LinearLayout>


            <ListView
                android:id="@+id/lv_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:cacheColorHint="@color/transparent"
                android:listSelector="@color/transparent"
                android:scrollbars="none">

            </ListView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <include layout="@layout/view_two_horizontal_bottom_button" />

</LinearLayout>
