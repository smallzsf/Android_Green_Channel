            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_non_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/tv_normal_titel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:gravity="center_vertical"
                    android:text="其他非心源性胸痛类型" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_non_heart_1"
                        style="@style/XyjCheckBoxHorizontalWeight"
                        android:tag="cpc_otherunacs_hxxtb"
