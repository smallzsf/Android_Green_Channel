                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_non_acs_13"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_xs"
                            android:text="心衰" />

                        <CheckBox
                            android:id="@+id/cb_non_acs_14"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_fp"
                            android:text="房扑" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <CheckBox
                            android:id="@+id/cb_non_acs_15"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_sz"
                            android:text="室早" />

                        <CheckBox
                            android:id="@+id/cb_non_acs_16"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_fz"
                            android:text="房早" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <CheckBox
                            android:id="@+id/cb_non_acs_17"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_sss"
                            android:text="室上速" />

                        <CheckBox
                            android:id="@+id/cb_non_acs_18"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_xby"
                            android:text="心包炎" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_non_acs_19"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_xjq"
                            android:text="心肌桥" />

                        <CheckBox
                            android:id="@+id/cb_non_acs_20"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_xbjy"
                            android:text="心包积液" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_non_acs_21"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_zdmgbjxz"
                            android:text="主动脉管壁间血肿" />

                        <CheckBox
                            android:id="@+id/cb_non_acs_22"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_tbxdmzyyhxky"
                            android:text="透壁性动脉粥样硬化性溃疡" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_non_acs_23"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_unacs_zdml"
                            android:text="主动脉瘤" />

