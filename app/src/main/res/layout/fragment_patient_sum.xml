<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin"
        android:gravity="center_vertical">

        <TextView
            style="@style/tv_normal_titel"
            android:layout_width="@dimen/item_title_min_width"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="诊断" />


        <com.xyj.strokeaid.view.editspinner.EditSpinner
            android:id="@+id/es_title_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:Background="@drawable/bg_view_frame"
            app:hint="请选择"
            app:rightImage="@drawable/ic_arrow_down_blue" />


    </LinearLayout>

    <com.xyj.strokeaid.view.TextTimeBar
        android:id="@+id/ttb_confirm_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        app:bottomLineVisible="true"
        app:title="确诊时间" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_stemi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/item_normal_margin"
                android:layout_marginRight="@dimen/item_normal_margin"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_normal_titel"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="院内新发心力衰竭" />


                    <RadioGroup
                        android:id="@+id/rg_heart_failure"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RadioButton
                            android:id="@+id/rb_heart_failure_yes"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:text="是" />

                        <RadioButton
                            android:id="@+id/rb_heart_failure_no"
                            style="@style/XyjRadionButtonHorizontalWeight"
                            android:text="否" />
                    </RadioGroup>
                </LinearLayout>

                <View style="@style/horizontal_divider" />

                <TextView
                    style="@style/tv_normal_titel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:gravity="center_vertical"
                    android:text="住院期间并发症" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_setmi_1"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_xk"
                            android:text="休克" />

                        <CheckBox
                            android:id="@+id/cb_setmi_2"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_jxxbfz"
                            android:text="机械性并发症" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_setmi_3"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_gr"
                            android:text="感染" />

                        <CheckBox
                            android:id="@+id/cb_setmi_4"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_zfxg"
                            android:text="再发心梗" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_setmi_5"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_xs"
                            android:text="血栓" />

                        <CheckBox
                            android:id="@+id/cb_setmi_6"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_cz"
                            android:text="缺血性卒中" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <CheckBox
                            android:id="@+id/cb_setmi_7"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_tia"
                            android:text="TIA" />

                        <CheckBox
                            android:id="@+id/cb_setmi_8"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_cx"
                            android:text="出血" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_setmi_9"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_hxsj"
                            android:text="呼吸衰竭" />

                        <CheckBox
                            android:id="@+id/cb_setmi_10"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_ssj"
                            android:text="肾衰竭" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_setmi_11"
                            style="@style/XyjCheckBoxHorizontalWeight"
                            android:tag="cpc_complication_sw"
                            android:text="死亡" />

                        <CheckBox
