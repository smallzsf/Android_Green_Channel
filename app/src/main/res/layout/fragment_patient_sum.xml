                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_non_heart_5"
                        style="@style/XyjCheckBoxHorizontalWeight"
                        android:tag="cpc_otherunacs_jrggb"
                        android:text="肌肉骨骼病" />

