                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/cb_non_heart_3"
                        style="@style/XyjCheckBoxHorizontalWeight"
                        android:tag="cpc_otherunacs_sjxtb"
                        android:text="神经系统病" />

                    <CheckBox
                        android:id="@+id/cb_non_heart_4"
