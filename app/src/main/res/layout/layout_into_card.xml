<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical"
    >

    <!--否-->

    <LinearLayout
        android:id="@+id/ll_into_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="无再灌注措施 *"
            android:textColor="#223b53"
            android:textSize="@dimen/item_title_size" />

        <CheckBox
            android:id="@+id/cb_text_1"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="生命体征平稳，无持续缺血表现"
            android:textSize="@dimen/item_content_size" />


        <CheckBox
            android:id="@+id/cb_text_2"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="超过再灌注时间窗"
            android:textSize="@dimen/item_content_size" />

        <CheckBox
            android:id="@+id/cb_text_3"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="高出血风险"
            android:textSize="@dimen/item_content_size" />

        <CheckBox
            android:id="@+id/cb_text_4"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="出血活动期"
            android:textSize="@dimen/item_content_size" />
        <CheckBox
            android:id="@+id/cb_text_5"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="严重肝肾功能不全"
            android:textSize="@dimen/item_content_size" />
        <CheckBox
            android:id="@+id/cb_text_6"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="经济原因限制"
            android:textSize="@dimen/item_content_size" />
        <CheckBox
            android:id="@+id/cb_text_7"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="拒绝或放弃"
            android:textSize="@dimen/item_content_size" />
        <CheckBox
            android:id="@+id/cb_text_8"
            style="@style/tv_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="其他原因"
            android:textSize="@dimen/item_content_size" />


    </LinearLayout>

    <!--是-->
    <LinearLayout
        android:id="@+id/ll_into_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="措施 *"
            android:textColor="#223b53"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/item_title_size" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_into_measure_level_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="直接PCI"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_into_measure_level_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="溶栓"
                android:textSize="@dimen/item_content_size"
                />

            <RadioButton
                android:id="@+id/rb_into_measure_level_3"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="择期介入"
                android:textSize="@dimen/item_content_size"
                />


        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_into_measure_level_4"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CABG"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_into_measure_level_5"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="转运PCI"
                android:textSize="@dimen/item_content_size"
                />


        </RadioGroup>

    </LinearLayout>

    <!--其他-->
    <LinearLayout
        android:id="@+id/ll_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="其他"
            android:textColor="#223b53"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/item_title_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="处理策略"
            android:textColor="#223b53"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/item_title_size" />

        <RadioGroup
            android:id="@+id/rg_other_deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_other_deal_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="保守治疗(仅药物治疗)"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_other_deal_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="侵入性策略"
                android:textSize="@dimen/item_content_size"
                />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/ll_invade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="侵入性策略："
                android:textColor="#223b53"
                android:layout_margin="@dimen/dp_10"
                android:textSize="@dimen/item_title_size" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <RadioButton
                    android:id="@+id/rb_invade_2"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2h紧急介入治疗"
                    android:textSize="@dimen/item_content_size" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rb_invade_24"
                        style="@style/tv_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_centerVertical="true"
                        android:text="24h内介入治疗"
                        android:textSize="@dimen/item_content_size"
                        />
                    <EditText
                        android:id="@+id/et_invade_ward"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/dp_110"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_edittext_bg"
                        android:gravity="left"
                        android:hint="实际介入时间"
                        android:padding="@dimen/dp_5"
                        android:textSize="@dimen/item_content_size" />

                </RelativeLayout>

                <RadioButton
                    android:id="@+id/rb_invade_72"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:text="72h内介入治疗"
                    android:textSize="@dimen/item_content_size"
                    />
                <RadioButton
                    android:id="@+id/rb_invade_other"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:text="择期介入治疗"
                    android:textSize="@dimen/item_content_size"
                    />
                <RadioButton
                    android:id="@+id/rb_invade_cabg"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerVertical="true"
                    android:text="CABG"
                    android:textSize="@dimen/item_content_size"
                    />

            </RadioGroup>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>