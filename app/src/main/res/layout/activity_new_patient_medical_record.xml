<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.NewPatientMedicalRecordActivity">

    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/title_bar_act_npmr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_title_height"
        app:rightIconVisible="false"
        app:rightText="快速建档"
        app:rightTextVisible="true"
        app:title="新建患者信息" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.ItemEditBar
                android:id="@+id/ieb_outpatient_id_act_npmr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_title="门诊ID" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:id="@+id/ieb_wristband_act_npmr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_title="绑定腕带" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_title="发病地址" />

            <com.xyj.strokeaid.view.TextTimeBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:title="发病时间" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_title="姓名" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="身份证"
                app:bar_leftTextColor="@color/color_222222"
                app:bar_rightIcon="@drawable/icon_id_card_scan"
                app:bar_rightIconVisible="true"
                app:bar_rightText=""
                app:bar_rightTextVisible="true" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_edit_enable="false"
                app:ieb_title="性别" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_edit_enable="false"
                app:ieb_title="体重"
                app:ieb_unit_text="@string/kg"
                app:ieb_unit_visible="true" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_edit_enable="false"
                app:ieb_title="身高"
                app:ieb_unit_text="@string/cm"
                app:ieb_unit_visible="true" />


            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_bottom_line_visible="true"
                app:ieb_edit_enable="false"
                app:ieb_title="BMI"
                app:ieb_unit_text="@string/kgm2"
                app:ieb_unit_visible="true" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="出生日期" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="来院方式"
                app:bar_leftTextColor="@color/color_222222" />

            <LinearLayout
                android:id="@+id/ll_come_hos_act_npmr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_EEEEEE"
                android:orientation="vertical"
                android:paddingStart="@dimen/item_normal_margin"
                android:paddingEnd="@dimen/item_normal_margin">

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:title="呼救时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:title="到达现场时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:title="首次医疗接触" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:title="到达医院大门" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    app:title="院内接诊时间" />

            </LinearLayout>

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="入院途径"
                app:bar_leftTextColor="@color/color_222222" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="国籍"
                app:bar_leftTextColor="@color/color_222222" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="民族"
                app:bar_leftTextColor="@color/color_222222" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="医保帐号"
                app:bar_leftTextColor="@color/color_222222" />

            <com.xyj.strokeaid.view.SettingBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:bar_bottomLineVisible="true"
                app:bar_leftText="户籍地址"
                app:bar_leftTextColor="@color/color_222222" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_title="联系人" />

            <com.xyj.strokeaid.view.ItemEditBar
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                app:ieb_title="联系电话" />

            <Button
                android:id="@+id/btn_save_act_npmr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttom_normal_height"
                android:layout_margin="@dimen/item_normal_margin"
                android:background="@drawable/shape_corner_20_with_blue"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/app_ffffff" />

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</LinearLayout>