<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llVitalSigns"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/Text_Blue_Content_Style"
                android:text="创伤原因" />

            <com.zhy.view.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rb_traffic_accident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="交通事故"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_produce_accident"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生产事故"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_height_fall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高空坠落"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_suicide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="自杀"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_murder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="他杀"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_fight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="斗殴"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_fight_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="群殴"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_knife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刀伤"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_gun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="枪伤"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />
            </com.zhy.view.flowlayout.FlowLayout>

            <EditText
                android:id="@+id/et_trauma_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/shape_grey_stroke"
                android:hint="创伤原因"
                android:inputType="text"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_666666"
                android:textSize="13sp" />

            <TextView
                style="@style/Text_Blue_Content_Style"
                android:layout_marginTop="@dimen/dp_10"
                android:text="创伤部位" />

            <com.zhy.view.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_head"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头颈部"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_face"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面部"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_chest"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胸部"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_belly"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="腹部"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_limb"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四肢"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_body"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="体表"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_pelvis"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="盆骨"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_spine"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="脊柱"
                    android:textSize="@dimen/item_content_size" />

                <CheckBox
                    android:id="@+id/cb_other_part"
                    style="@style/tv_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他"
                    android:textSize="@dimen/item_content_size" />
            </com.zhy.view.flowlayout.FlowLayout>

            <EditText
                android:id="@+id/et_trauma_part"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginEnd="@dimen/dp_12"
                android:background="@drawable/shape_grey_stroke"
                android:hint="创伤部位"
                android:inputType="text"
                android:paddingStart="@dimen/dp_8"
                android:paddingEnd="@dimen/dp_8"
                android:singleLine="true"
                android:textColor="@color/color_222222"
                android:textColorHint="@color/color_666666"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="患者到达时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="医生到达时间" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="接诊医生"
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_12"
                        android:background="@drawable/shape_grey_stroke"
                        android:hint="单行输入"
                        android:inputType="text"
                        android:paddingStart="@dimen/dp_8"
                        android:singleLine="true"
                        android:textColor="@color/color_222222"
                        android:textColorHint="@color/color_666666"
                        android:textSize="13sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">


                <TextView
                    style="@style/Text_Blue_Content_Style"
                    android:text="生命体征" />

                <include layout="@layout/layout_view_declaration_of_signs"></include>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/Text_Blue_Content_Style"
                    android:text="紧急处理" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="静脉通路时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="气管插管时间" />

                <com.xyj.strokeaid.view.TextTimeBar
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/item_normal_height"
                    android:background="@color/white"
                    tl:title="心肺复苏时间" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="补液："
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.xyj.strokeaid.view.ItemEditBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            app:ieb_bottom_line_visible="true"
                            tl:ieb_edit_hint="单行输入"
                            tl:ieb_title="晶体"
                            tl:ieb_unit_text="ml"
                            tl:ieb_unit_visible="true">

                        </com.xyj.strokeaid.view.ItemEditBar>

                        <com.xyj.strokeaid.view.ItemEditBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:minHeight="@dimen/dp_40"
                            app:ieb_bottom_line_visible="true"
                            tl:ieb_edit_hint="单行输入"
                            tl:ieb_unit_text="ml"
                            tl:ieb_unit_visible="true">

                        </com.xyj.strokeaid.view.ItemEditBar>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="通气方式："
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <com.zhy.view.flowlayout.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_simple_respirator"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="简易呼吸器"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_ILMA"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="喉罩通气"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_nasal_catheter_ventilation"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="鼻导管通气"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_oropharyngeal_ventilation"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="口咽管通气"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_nasotracheal_tube"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="经鼻气管内插管"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_orotracheal_intubation"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="经口气管内插管"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_tracheotomy"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="气管切开"
                            android:textSize="@dimen/item_content_size" />

                        <RadioButton
                            android:id="@+id/rb_ricothyroidotomy"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="环甲膜切开手术"
                            android:textSize="@dimen/item_content_size" />

                    </com.zhy.view.flowlayout.FlowLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/item_normal_height"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_12"
                        android:gravity="center"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:minWidth="60dp"
                        android:text="处理方式："
                        android:textColor="@color/color_222222"
                        android:textSize="@dimen/item_title_size" />

                    <com.zhy.view.flowlayout.FlowLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/cb_ventilation_bandage"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="伤口包扎"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_limbs"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="肢体固定"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_chest"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="胸廓固定"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_pelvis"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="骨盆固定"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_neck"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="颈托"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_vertebra"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="脊椎固定"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_fracture_out"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="骨折夹板外固定"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_suture"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="清创缝合"
                            android:textSize="@dimen/item_content_size" />

                        <CheckBox
                            android:id="@+id/cb_ventilation_catheter"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="安置导管"
                            android:textSize="@dimen/item_content_size" />

                    </com.zhy.view.flowlayout.FlowLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_ventilation_other"
                            style="@style/tv_small"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:checked="true"
                            android:text="其他"
                            android:textSize="@dimen/item_content_size" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:layout_marginRight="@dimen/dp_12"
                            android:layout_weight="1"
                            android:background="@drawable/shape_grey_stroke"
                            android:hint="单行输入"
                            android:inputType="text"
                            android:paddingStart="@dimen/dp_8"
                            android:singleLine="true"
                            android:textColor="@color/color_222222"
                            android:textColorHint="@color/color_666666"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/Text_Blue_Content_Style"
                    android:text="急救措施" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/item_normal_height"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:gravity="center_vertical"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:minWidth="60dp"
                            android:text="输血"
                            android:textColor="@color/color_222222"
                            android:textSize="@dimen/item_title_size" />

                        <RadioGroup
                            android:id="@+id/rg_blood_transfusion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_12"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RadioButton
                                android:id="@+id/rb_blood_transfusion"
                                style="@style/tv_small"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:checked="true"
                                android:text="是"
                                android:textSize="@dimen/item_content_size" />

                            <RadioButton
                                android:id="@+id/rb_blood_transfusion_no"
                                style="@style/tv_small"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="否"
                                android:textSize="@dimen/item_content_size" />

                        </RadioGroup>

                    </LinearLayout>

                    <com.xyj.strokeaid.view.TextTimeBar
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:background="@color/white"
                        tl:title="申请用血时间" />

                    <com.xyj.strokeaid.view.TextTimeBar
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/item_normal_height"
                        android:background="@color/white"
                        tl:title="输血开始时间" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/item_normal_height"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:gravity="center_vertical"
                            android:maxLength="6"
                            android:maxLines="1"
                            android:minWidth="60dp"
                            android:text="建立人工气道"
                            android:textColor="@color/color_222222"
                            android:textSize="@dimen/item_title_size" />

                        <RadioGroup
                            android:id="@+id/rg_artificial_to"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_12"
                            android:layout_marginRight="@dimen/dp_12"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <RadioButton
