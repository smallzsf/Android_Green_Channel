<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_ffffff"
    android:focusable="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true">


    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:rightIconVisible="false"
        app:rightTextVisible="true"
        app:title="@string/electrocardiogram" />

    <LinearLayout
        android:id="@+id/triage_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlebar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_37"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:text="@string/electrocardiogram"
            android:textColor="@color/app_223b53"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:id="@+id/app_tv_editSpinner_time"
            style="@style/patient_et_style"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="2.4"
            android:focusable="false"
            android:hint="@string/app_default_time_example"
            android:paddingLeft="@dimen/dp_10" />

        <ImageView
            android:id="@+id/iv_refresh"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:src="@drawable/ic_refresh" />
    </LinearLayout>

    <View
        android:id="@+id/doctor_name_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/triage_time"
        android:background="@color/app_eef3f7" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_139"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/app_ffffff"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_21">





            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#223b53"
                android:text="@string/ecg_results" />

            <EditText
                android:id="@+id/app_et_ecg_result"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_110"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_23"
                android:background="@drawable/shape_condition_record_edittext_background"
                android:gravity="top"
                android:hint="@string/please_enter_ecg_results"
                android:maxLength="500"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_11"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_11"
                android:singleLine="false" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <include
        android:id="@+id/menu"
        layout="@layout/view_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</LinearLayout>
