<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="心功能分级 *"
            android:textColor="#223b53"
            android:layout_margin="@dimen/dp_10"
            android:textSize="@dimen/item_title_size" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_level_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="I级(no CHF)"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_level_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="II级(rales and/or JVD)"
                android:textSize="@dimen/item_content_size"
                />

            <RadioButton
                android:id="@+id/rb_level_3"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="III级(pulmonary edema)"
                android:textSize="@dimen/item_content_size"
                />
            <RadioButton
                android:id="@+id/rb_level_4"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="IV级(cardiogenic shock)"
                android:textSize="@dimen/item_content_size"
                />

        </RadioGroup>

    </LinearLayout>
</LinearLayout>