<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_stroke_other"
    tools:context=".fragment.stroke.StrokeOtherFragment">

    <!--  <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="血液检查" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/sp_15">

                <TextView
                    android:id="@+id/awareness"
                    android:layout_width="@dimen/tooltip_precise_anchor_threshold"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="抽血时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_title_size" />


                <TextView
                    android:id="@+id/tv_draw_blood_time"
                    style="@style/patient_et_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/awareness"
                    android:focusable="false"
                    android:gravity="center|right"
                    android:hint="@string/app_default_time_example"
                    android:text="选取时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/sp_15">

                <LinearLayout
                    android:id="@+id/breath_layout"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/breath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="结果时间"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />


                </LinearLayout>


                <TextView
                    android:id="@+id/tv_draw_blood_result_time"
                    style="@style/patient_et_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:gravity="center|right"
                    android:hint="@string/app_default_time_example"
                    android:text="选取时间"
                    android:textColor="@color/app_223b53"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/pulse_layout"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/pulse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="肌钙蛋白"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_pulse_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/pulse_unit_times_minute"
                    android:layout_toRightOf="@+id/pulse_layout"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/heart_rate_layout"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/heart_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血清肌酐"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_heart_rate_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/heart_rate_unit_times_minute"
                    android:layout_toRightOf="@+id/heart_rate_layout"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/systolic_blood_pressure_layout"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/systolic_blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血清尿素氮"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_systolic_blood_pressure_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/systolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/systolic_blood_pressure_layout"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />

            </RelativeLayout>

            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/diastolic_blood_pressure_layout"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/diastolic_blood_pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="尿酸"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_diastolic_blood_pressure_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/diastolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/diastolic_blood_pressure_layout"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/diastolic_blood_pressure_layout1"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血小板计数"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/diastolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/diastolic_blood_pressure_layout1"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/diastolic_blood_pressure_layout2"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血钾"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/diastolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/diastolic_blood_pressure_layout2"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/diastolic_blood_pressure_layout3"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="血纳"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/diastolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/diastolic_blood_pressure_layout3"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>


            <include layout="@layout/include_line" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/vital_sign_item_height"
                android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
                android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

                <LinearLayout
                    android:id="@+id/diastolic_blood_pressure_layout4"
                    android:layout_width="@dimen/vital_sign_title_width"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="同型半胖氨酸"
                        android:textColor="@color/app_223b53"
                        android:textSize="@dimen/item_title_size" />
                </LinearLayout>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/diastolic_blood_pressure_unit_mm_hg"
                    android:layout_toRightOf="@+id/diastolic_blood_pressure_layout4"
                    android:background="@null"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="3"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </RelativeLayout>

            <include layout="@layout/include_line" />




        </LinearLayout>

    </ScrollView>


    <include
        layout="@layout/view_two_horizontal_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_8" />
    <!--   <include
           android:id="@+id/menu"
           layout="@layout/view_bottom_menu"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true" />-->
</LinearLayout>
