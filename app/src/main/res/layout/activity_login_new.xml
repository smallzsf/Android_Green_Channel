<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">



        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_launch"
                    android:layout_width="match_parent"
                    android:layout_height="334dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/login_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:text="急诊绿色通道信息管理系统 "
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="280dp"
                    android:layout_marginLeft="@dimen/dk_font_size_24"
                    android:layout_marginRight="@dimen/dk_font_size_24"
                    android:background="@drawable/shape_white_login"
                    android:orientation="vertical">


                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tl_title_act_stroke_main"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dk_font_size_24"
                        android:layout_marginRight="@dimen/dk_font_size_24"
                        android:layout_height="@dimen/title_bar_height"
                        app:tabIndicatorColor="@color/colorPrimary"
                        app:tabSelectedTextColor="@color/colorPrimary"
                        app:tabTextAppearance="@style/tab1_layout_text"
                        app:tabTextColor="@color/black" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_content_act_stroke_main"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/dk_font_size_24"
                        android:layout_marginRight="@dimen/dk_font_size_24"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:scrollbars="none">


                    </androidx.viewpager2.widget.ViewPager2>

                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>


</RelativeLayout>