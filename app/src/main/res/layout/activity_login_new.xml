<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_launch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/login_bg" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:text="急诊绿色通道信息管理系统 "
                android:textColor="#ffffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_alignTop="@+id/tv_title"
                android:layout_alignRight="@id/tv_title"
                android:src="@drawable/login_setting"/>



            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dk_font_size_24"
                android:layout_marginTop="-40dp"
                android:layout_below="@+id/iv_launch"
                android:layout_marginRight="@dimen/dk_font_size_24"
                android:background="@drawable/shape_white_login"
                android:orientation="vertical">


                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tl_title_act_stroke_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_bar_height"
                    android:layout_marginLeft="@dimen/dk_font_size_24"
                    android:layout_marginRight="@dimen/dk_font_size_24"
                    app:tabIndicatorColor="@color/colorPrimary"
                    app:tabSelectedTextColor="@color/colorPrimary"
                    app:tabTextAppearance="@style/tab1_layout_text"
                    app:tabTextColor="@color/black" />
                <!--
                                    <androidx.viewpager2.widget.ViewPager2
                                        android:id="@+id/vp_content_act_stroke_main"
                                        android:layout_width="match_parent"
                                        android:layout_marginLeft="@dimen/dk_font_size_24"
                                        android:layout_marginRight="@dimen/dk_font_size_24"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:orientation="horizontal"
                                        android:scrollbars="none">-->


                <LinearLayout
                    android:id="@+id/ll_pwd_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dk_font_size_24"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_marginRight="@dimen/dk_font_size_24"
                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/login_phone" />


                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@android:color/transparent"
                            android:gravity="left|bottom"
                            android:hint="请输入您的用户名ID"
                            android:paddingLeft="@dimen/dp_6"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_21"
                        android:background="@color/app_ffe4e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_21"
                            android:src="@drawable/login_pwd"
                            android:text="@string/login_password"
                            android:textSize="@dimen/sp_15" />


                        <EditText
                            android:id="@+id/et_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@android:color/transparent"
                            android:gravity="left|bottom"
                            android:hint="@string/login_et_input_password"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/dp_6"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_21"
                        android:background="@color/app_ffe4e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/cb_remember_password"
                            style="@style/mycheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_checkbox"
                            android:button="@null"
                            android:textSize="@dimen/sp_15" />


                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:gravity="left|center"
                            android:hint="记住密码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/dp_6"
                            android:enabled="false"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="@dimen/sp_13" />


                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_41"
                        android:layout_marginTop="@dimen/dp_22"
                        android:background="@drawable/login_btn_bg"
                        android:text="@string/login_btn"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="@+id/cl"
                        app:layout_constraintRight_toRightOf="@+id/cl"
                        app:layout_constraintTop_toBottomOf="@+id/cb_remember_password" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_verifycode_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dk_font_size_24"
                    android:layout_marginTop="@dimen/dp_23"
                    android:layout_marginRight="@dimen/dk_font_size_24"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:visibility="gone"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/login_phone" />


                        <EditText
                            android:id="@+id/et_name1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@android:color/transparent"
                            android:gravity="left|bottom"
                            android:hint="请输入您的用户名ID"
                            android:paddingLeft="@dimen/dp_6"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:layout_marginTop="@dimen/dp_21"
                        android:background="@color/app_ffe4e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_21"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/tv_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_21"
                            android:src="@drawable/login_pwd" />


                        <EditText
                            android:id="@+id/et_password1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:gravity="left|bottom"
                            android:hint="请输入验证码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/dp_6"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:background="@drawable/login_send_code_bg"
                            android:padding="6dp"
                            android:text="发送验证码"
                            android:textColor="@color/white"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/app_ffe4e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/cb_remember_password1"
                            style="@style/mycheckbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/login_checkbox"
                            android:button="@null"
                            android:textSize="@dimen/sp_15" />



                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_23"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:gravity="left|center"
                            android:hint="记住密码"
                            android:inputType="textPassword"
                            android:paddingLeft="@dimen/dp_6"
                            android:enabled="false"
                            android:singleLine="true"
                            android:textColor="#ff666666"
                            android:textColorHint="#c5cdd9"
                            android:textSize="@dimen/sp_13" />



                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_41"
                        android:layout_marginTop="@dimen/dp_22"
                        android:background="@drawable/login_btn_bg"
                        android:text="@string/login_btn"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        app:layout_constraintLeft_toLeftOf="@+id/cl"
                        app:layout_constraintRight_toRightOf="@+id/cl"
                        app:layout_constraintTop_toBottomOf="@+id/cb_remember_password" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>