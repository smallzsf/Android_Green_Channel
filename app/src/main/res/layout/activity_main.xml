<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EAEEF2"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_title_act_main"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:paddingStart="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:background="@color/colorPrimary">

        <com.xyj.strokeaid.view.BaseTitleBar
            android:id="@+id/title_bar_act_main"
            android:layout_width="match_parent"
            app:title="@string/app_name"
            app:rightIconVisible="true"
            app:rightIcon="@drawable/icon_add"
            app:leftIconVisible="false"
            android:layout_height="@dimen/title_bar_height"/>


        <TextView
            android:id="@+id/tv_user_act_main"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/title_bar_height"
            android:drawablePadding="@dimen/dp_4"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLength="5"
            android:singleLine="true"
            android:textColor="@color/color_FFFFFF"
            android:textSize="13sp"
            app:drawableStartCompat="@drawable/icon_user"
            tools:text="刘杰" />

        <include
            layout="@layout/view_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctl_title_act_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/white"
        app:tl_iconVisible="false"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="@color/colorPrimary"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_textSelectColor="@color/colorPrimary"
        tl:tl_textUnselectColor="@color/color_222222"
        tl:tl_textsize="15sp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/srl_fresh_act_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_content_act_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/adapter_rv_home_patient_item" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>