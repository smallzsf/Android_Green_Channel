<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/rl_title"
        android:background="@color/colorPrimary22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/item_normal_height"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12">

        <ImageView
            android:id="@+id/iv_troponin"
            android:layout_width="@dimen/item_normal_height"
            android:layout_height="@dimen/item_normal_height"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:scaleType="center"
            android:src="@drawable/ic_arrow_down_blue" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="400dp"
            android:layout_height="@dimen/item_normal_height"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_toStartOf="@id/iv_troponin"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:maxLines="2"
            android:textColor="@color/color_222222"
            android:textSize="@dimen/item_title_size"
            android:text="肌钙蛋白" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_text_1"
        style="@style/tv_small_hiht"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_text_2"
        style="@style/tv_small_hiht"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_text_3"
        style="@style/tv_small_hiht"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_text_4"
        style="@style/tv_small_hiht"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_text_5"
        style="@style/tv_small_hiht"
        >
    </TextView>
    <TextView
        android:id="@+id/tv_text_6"
        style="@style/tv_small_hiht"
        >
    </TextView>

</LinearLayout>