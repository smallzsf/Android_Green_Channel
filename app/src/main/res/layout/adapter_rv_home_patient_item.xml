<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/dp_12">

    <TextView
        android:id="@+id/tv_name_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/dp_12"
        android:gravity="center_vertical"
        android:textColor="@color/color_222222"
        android:textSize="@dimen/text_common_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="江流儿" />

    <TextView
        android:id="@+id/tv_disease_type_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/dp_12"
        android:gravity="center_vertical"
        android:text="卒中"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_name_item_patient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        style="@style/horizontal_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_patient" />

    <TextView
        android:id="@+id/tv_sex_and_age_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_patient_text_height"
        android:gravity="center_vertical"
        android:text="@string/sex_and_age_with_para"
        android:textColor="@color/color_222222"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_name_item_patient"
        app:layout_constraintTop_toBottomOf="@id/tv_name_item_patient" />


    <TextView
        android:id="@+id/tv_start_time_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_patient_text_height"
        android:gravity="center"
        android:text="@string/patient_start_disease_time"
        android:textColor="@color/color_222222"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tv_name_item_patient"
        app:layout_constraintTop_toBottomOf="@id/tv_sex_and_age_item_patient" />

<!--    <TextView-->
<!--        android:id="@+id/tv_end_time_item_patient"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="@dimen/item_patient_text_height"-->
<!--        android:gravity="center"-->
<!--        android:text="@string/patient_start_green_channel"-->
<!--        android:textColor="@color/color_222222"-->
<!--        app:layout_constraintStart_toStartOf="@id/tv_name_item_patient"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tv_start_time_item_patient" />-->

    <View
        style="@style/horizontal_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time_item_patient" />

    <TextView
        android:id="@+id/tv_detail_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/shape_primary_color_stroke_corner_3"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:text="查看详情"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_common_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time_item_patient" />

    <TextView
        android:id="@+id/tv_time_node_item_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:background="@drawable/shape_primary_color_stroke_corner_3"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingTop="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_5"
        android:text="查看时间轴"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_common_size"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_detail_item_patient"
        app:layout_constraintEnd_toStartOf="@id/tv_detail_item_patient" />

</androidx.constraintlayout.widget.ConstraintLayout>