<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <include layout="@layout/layout_original_top" />

        <include layout="@layout/layout_other_no_acs_type" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_normal_margin"
            android:layout_marginRight="@dimen/item_normal_margin"
            android:gravity="bottom"
            android:orientation="vertical">
            <include
                layout="@layout/view_two_horizontal_bottom_button"/>
        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>