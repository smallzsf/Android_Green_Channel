<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!--确诊-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/vital_sign_item_height"
        android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
        android:layout_marginRight="@dimen/sp_15">


        <com.xyj.strokeaid.view.TextTimeBar
            android:id="@+id/tv_draw_blood_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:background="@color/white"
            app:title="确诊时间" />


    </RelativeLayout>

    <include layout="@layout/include_line" />
    <!--院内-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
        android:layout_marginRight="@dimen/vital_sign_item_margin_left_right">

        <TextView
            android:id="@+id/give_up_cure"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="院内新发心力衰竭"
            android:textColor="@color/app_223b53"
            android:textSize="@dimen/item_title_size" />


        <RadioGroup
            android:id="@+id/rg_yn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_blood_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="是"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_ct_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="否"
                android:textSize="@dimen/item_content_size"
                />

            <RadioButton
                android:id="@+id/rb_cta_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CTA"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_ctp_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CTP"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_mri_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MRI"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_mra_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MRA"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_cemra_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CE-MRA"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_cvus_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="颈部血管超声"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_tcd_frag_ae"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TCD"
                android:textSize="@dimen/item_content_size"
                android:visibility="gone" />

        </RadioGroup>
    </LinearLayout>
    <include layout="@layout/include_line" />

     <!--NYHA分级-->
    <LinearLayout
        android:id="@+id/ll_nyha"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_normal_height"
        android:layout_marginLeft="@dimen/vital_sign_item_margin_left_right"
        android:layout_marginRight="@dimen/vital_sign_item_margin_left_right"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_nyha_label"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="NYHA分级*"
            android:textColor="@color/app_223b53"
            android:textSize="@dimen/item_title_size" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_nyha_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="I"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_nyha_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="II"
                android:textSize="@dimen/item_content_size"
                />

            <RadioButton
                android:id="@+id/rb_nyha_3"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="III"
                android:textSize="@dimen/item_content_size"
                 />

            <RadioButton
                android:id="@+id/rb_nyha_4"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="IV"
                android:textSize="@dimen/item_content_size"
                 />
        </RadioGroup>
    </LinearLayout>
    <include layout="@layout/include_line" />
        <!--住院期间并发症-->
    <include layout="@layout/layout_inner_complication"/>
    <include layout="@layout/layout_danger_factor" />
    <include layout="@layout/layout_check_result" />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/timeline_item_margintop"
        layout="@layout/view_two_horizontal_bottom_button" />

    </LinearLayout>



</androidx.core.widget.NestedScrollView>