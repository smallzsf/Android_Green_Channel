<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:zhy="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/bt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="病情记录" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_540"
        app:layout_constraintHorizontal_weight="1"
        android:background="@color/app_ffffff"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/bt_title">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:background="@color/app_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_20">

                <TextView
                    style="@style/Text_Dark_Content_Style"
                    android:text="@string/chief_complaint" />

                <EditText
                    android:id="@+id/app_et_condition_chief_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_4"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4"
                    android:background="@drawable/shape_condition_record_edittext_background"
                    android:gravity="top"
                    android:hint="@string/tip_chief_complaint"
                    android:maxLength="50"
                    android:singleLine="false"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <include layout="@layout/include_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_ffffff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/app_tv_conditon_record"
                    style="@style/Text_Dark_Content_Style"
                    android:text="@string/app_symptom" />
                <EditText
                    android:id="@+id/et_symptom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:background="@drawable/shape_edittext_bg"
                    android:layout_marginTop="@dimen/dp_7"
                    android:hint="请输入症状"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>



            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flow_layout"
                zhy:max_select="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_16"
               >
            </com.zhy.view.flowlayout.TagFlowLayout>
            <include layout="@layout/include_line" />
            <TextView
                style="@style/Text_Dark_Content_Style"
                android:text="@string/past_medical_history"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"/>
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flow_layout2"
                zhy:max_select="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_16">
            </com.zhy.view.flowlayout.TagFlowLayout>

            <include layout="@layout/include_line"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_ffffff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    style="@style/Text_Dark_Content_Style"
                    android:text="@string/history_of_drug_allergy"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginTop="@dimen/dp_7"
                    android:hint="请输入药物过敏史"
                    android:gravity="start"
                    android:background="@drawable/shape_edittext_bg"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>
            <include layout="@layout/include_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/app_ffffff"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_12">
                <TextView
                    style="@style/Text_Dark_Content_Style"
                    android:text="备注"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:background="@drawable/shape_edittext_bg"
                    android:layout_marginTop="@dimen/dp_7"
                    android:hint="请输入备注内容"
                    android:gravity="start"
                    android:textSize="@dimen/sp_14"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:layout_marginBottom="@dimen/dp_10"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="88dp"
        android:background="@drawable/shape_btn_blue"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginRight="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/shape_btn_blue_stroke"
        android:text="@string/lab_cancel"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_confirm" />

</androidx.constraintlayout.widget.ConstraintLayout>
