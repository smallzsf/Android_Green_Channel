<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_stroke_blood_sugar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:orientation="vertical"
    tools:context=".fragment.stroke.StrokeBloodSugarFragment">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/menu"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.xyj.strokeaid.view.TextTimeBar
                android:id="@+id/ttb_awareness_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:background="@color/white"
                tl:title="抽血时间" />

            <include layout="@layout/include_line" />

            <com.xyj.strokeaid.view.TextTimeBar
                android:id="@+id/ttb_draw_blood_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:background="@color/white"
                tl:title="结果时间" />

            <include layout="@layout/include_line" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_normal_height"
                android:layout_marginStart="@dimen/item_normal_margin"
                android:layout_marginEnd="@dimen/item_normal_margin"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pulse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:minWidth="@dimen/item_title_min_width"
                    android:text="血糖"
                    android:textColor="@color/color_222222"
                    android:textSize="@dimen/item_title_size" />

                <EditText
                    android:id="@+id/et_blood_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_12"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入"
                    android:inputType="number"
                    android:maxLength="5"
                    android:maxLines="1"
                    android:textSize="@dimen/item_content_size" />


            </LinearLayout>


            <include layout="@layout/include_line" />


        </LinearLayout>


    </ScrollView>


    <include
        android:id="@+id/ll_bottom"
        layout="@layout/view_two_horizontal_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_8" />



</LinearLayout>
