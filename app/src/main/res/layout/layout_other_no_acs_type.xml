<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/ll_heart_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:gravity="center"
            android:text="其他非心源性胸痛类型"
            android:textColor="#223b53"
            android:textSize="@dimen/item_title_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_text_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="呼吸系统病"
                android:textSize="@dimen/item_content_size" />

            <CheckBox
                android:id="@+id/cb_text_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="消化系统病"
                android:textSize="@dimen/item_content_size" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_text_3"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="神经系统病"
                android:textSize="@dimen/item_content_size" />

            <CheckBox
                android:id="@+id/cb_text_4"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="精神系统病"
                android:textSize="@dimen/item_content_size" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/cb_text_5"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="肌肉骨骼病"
                android:textSize="@dimen/item_content_size" />

            <CheckBox
                android:id="@+id/cb_text_6"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="皮肤系统病"
                android:textSize="@dimen/item_content_size" />

            <CheckBox
                android:id="@+id/cb_text_7"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="其他"
                android:textSize="@dimen/item_content_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_deal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/item_normal_margin"
        android:layout_marginRight="@dimen/item_normal_margin">

        <TextView
            android:id="@+id/tv_strategy"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center_vertical"
            android:text="处理措施"
            android:gravity="center_vertical"
            android:textColor="@color/app_223b53"
            android:textSize="@dimen/item_title_size" />


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_step_1"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="治疗入院"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_step_2"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="急诊留观"
                android:textSize="@dimen/item_content_size"
                />
        </RadioGroup>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rb_step_3"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="门诊治疗"
                android:textSize="@dimen/item_content_size" />

            <RadioButton
                android:id="@+id/rb_step_4"
                style="@style/tv_small"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="随访"
                android:textSize="@dimen/item_content_size"
                />
        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_note"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_5"
        android:layout_gravity="center_vertical"
        android:text="患者情况备注"
        android:gravity="center_vertical"
        android:textColor="@color/app_223b53"
        android:textSize="@dimen/item_title_size" />
    <EditText
        android:id="@+id/et_note"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_7"
        android:hint="多行输入"
        android:gravity="start"
        android:background="@drawable/shape_edittext_bg"
        android:textSize="@dimen/sp_14"
        android:paddingLeft="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_10"/>



</LinearLayout>