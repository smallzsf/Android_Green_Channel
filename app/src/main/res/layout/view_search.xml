<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_normal_height"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_disease_view_search"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_circle_corner_with_alpha_back"
        android:drawablePadding="@dimen/dp_12"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_12"
        android:text="卒中"
        android:textColor="@color/color_FFFFFF"
        app:drawableEndCompat="@drawable/common_icon_white_arrow_down" />


    <EditText
        android:layout_marginStart="@dimen/dp_10"
        android:id="@+id/et_search_view_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/tv_disease_view_search"
        android:background="@drawable/shape_circle_corner_with_alpha_back"
        android:focusable="false"
        android:gravity="center_vertical"
        android:hint="@string/hint_search_patient"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="40dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_FFFFFF"
        android:textColorHint="@color/color_FFFFFF"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_search_view_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:src="@drawable/home_search" />

</RelativeLayout>