<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_normal_height"
    android:background="@drawable/shape_circle_corner_with_alpha_back"
    android:paddingStart="@dimen/dp_12"
    android:paddingEnd="@dimen/dp_12"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_disease_view_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="卒中"
        android:layout_marginEnd="@dimen/dp_12"
        android:textColor="@color/color_FFFFFF"
        app:drawableEndCompat="@drawable/common_icon_white_arrow_down" />

    <View
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/color_DDFFFFFF"/>

    <EditText
        android:id="@+id/et_search_view_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:hint="@string/hint_search_patient"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:background="@null"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/color_FFFFFF"
        android:textColorHint="@color/color_FFFFFF"
        android:textSize="@dimen/text_common_size" />

    <ImageView
        android:id="@+id/iv_search_view_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/home_search" />

</LinearLayout>