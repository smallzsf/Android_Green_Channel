<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.stroke.ThrombolysisComplicationsActivity">

    <com.xyj.strokeaid.view.BaseTitleBar
        android:id="@+id/title_bar_act_stc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        app:title="溶栓并发症" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_act_stc"
        android:orientation="vertical">

        <com.xyj.strokeaid.view.TextSwitchBar
            android:id="@+id/tsb_age_act_stc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_normal_height"
            android:background="@color/white"
            app:tsb_switch="true"
            app:tsb_title="是否溶栓" />

        <include layout="@layout/include_line" />

        <LinearLayout
            android:id="@+id/ll_have_act_stc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12"
            android:visibility="visible">

            <TextView
                style="@style/tv_normal_titel"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/item_title_height"
                android:layout_gravity="center|left"
                android:gravity="center"
                android:text="@string/app_complication" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/tfl_complication_act_stc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1">

            </com.zhy.view.flowlayout.TagFlowLayout>

        </LinearLayout>



    </LinearLayout>

    <include
        layout="@layout/view_two_bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>