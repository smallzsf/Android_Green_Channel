<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--底层使用透明填充色-->
    <item>
        <shape>
            <size
                android:width="320dp"
                android:height="1dp" />
            <solid android:color="@color/transparent" />
        </shape>
    </item>

    <!--然后覆盖一层蓝色填充色，这里的left、right相当于margin，距离左右的间距-->
    <item
        android:left="20dp"
        android:right="20dp">
        <shape>
            <size
                android:width="280dp"
                android:height="1dp" />
            <solid android:color="@color/line" />
        </shape>
    </item>
</layer-list>