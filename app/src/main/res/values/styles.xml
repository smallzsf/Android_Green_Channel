<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionSheetStyle">@style/ActionSheetStyleiOS7</item>
    </style>


    <style name="tab_layout_text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tab1_layout_text">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="tv_normal_titel">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="tv_small">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="et_normal_titel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="login_et_style">
        <item name="android:textColorHint">#c5cdd9</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_23</item>
    </style>

    <style name="patient_et_style">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">@color/app_c5cdd9</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>


    <!--view 分割线样式 -->
    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_F1F1F1</item>
    </style>

    <declare-styleable name="ImageEditBar">

        <attr name="eb_left_icon" format="reference" />
        <attr name="eb_left_icon_visible" format="boolean" />
        <attr name="eb_right_icon" format="reference" />
        <attr name="eb_right_icon_visible" format="boolean" />
        <attr name="eb_et_hint" format="string" />
        <attr name="eb_et_enable" format="boolean" />
        <attr name="eb_et_content" format="string" />
        <attr name="eb_top_line_visible" format="boolean" />
        <attr name="eb_bottom_line_visible" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ItemEditBar">

        <attr name="ieb_title" format="string" />
        <attr name="ieb_must_fill" format="boolean" />

        <attr name="ieb_edit_enable" format="boolean" />
        <attr name="ieb_edit_hint" format="string" />
        <attr name="ieb_edit_content" format="string" />

        <attr name="ieb_unit_visible" format="boolean" />
        <attr name="ieb_unit_text" format="string" />

        <attr name="ieb_top_line_visible" format="boolean" />
        <attr name="ieb_bottom_line_visible" format="boolean" />

        <attr name="ieb_right_icon_visible" format="boolean" />
        <attr name="ieb_right_icon" format="reference" />

    </declare-styleable>


    <declare-styleable name="SettingBar">
        <!-- 左边 -->
        <attr name="bar_leftText" format="string|reference" />
        <attr name="bar_leftTextColor" format="color|reference" />
        <attr name="bar_leftIcon" format="reference" />
        <attr name="bar_leftIconVisible" format="boolean" />
        <!-- 右边 -->
        <attr name="bar_rightText" format="string" />
        <attr name="bar_rightTextColor" format="color|reference" />
        <attr name="bar_rightTextVisible" format="boolean" />
        <attr name="bar_rightIcon" format="reference" />
        <attr name="bar_rightIconVisible" format="boolean" />
        <!-- 分割线 -->
        <attr name="bar_topLineVisible" format="boolean" />
        <attr name="bar_bottomLineVisible" format="boolean" />
    </declare-styleable>

    <style name="Text_Dark_Content_Style">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">#223b53</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text_Blue_Content_Style">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">#223b53</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:background">@color/colorPrimary22</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox</item>
    </style>

    <!-- dialog样式 -->
    <style name="LoadDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="ActionSheetStyleiOS7">
        <item name="actionSheetBackground">@android:color/transparent</item>
        <item name="cancelButtonBackground">@drawable/slt_as_ios7_cancel_bt</item>
        <item name="otherButtonTopBackground">@drawable/slt_as_ios7_other_bt_top</item>
        <item name="otherButtonMiddleBackground">@drawable/slt_as_ios7_other_bt_middle</item>
        <item name="otherButtonBottomBackground">@drawable/slt_as_ios7_other_bt_bottom</item>
        <item name="otherButtonSingleBackground">@drawable/slt_as_ios7_other_bt_single</item>
        <item name="cancelButtonTextColor">#1E82FF</item>
        <item name="otherButtonTextColor">#1E82FF</item>
        <item name="actionSheetPadding">10dp</item>
        <item name="otherButtonSpacing">0dp</item>
        <item name="cancelButtonMarginTop">10dp</item>
        <item name="actionSheetTextSize">16sp</item>
    </style>
</resources>