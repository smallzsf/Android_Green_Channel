<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tab_layout_text">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="tab1_layout_text">
        <item name="android:textSize">12dp</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_divider</item>
    </style>

    <style name="tv_normal_titel">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_small">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="et_normal_titel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_222222</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="login_et_style">
        <item name="android:textColorHint">#c5cdd9</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/dp_6</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_23</item>
    </style>

    <style name="patient_et_style">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColorHint">@color/app_c5cdd9</item>
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>


    <!--view 分割线样式 -->
    <style name="ViewLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_1</item>
        <item name="android:background">@color/color_F1F1F1</item>
    </style>

    <declare-styleable name="ImageEditBar">

        <attr name="eb_left_icon" format="reference" />
        <attr name="eb_left_icon_visible" format="boolean" />
        <attr name="eb_right_icon" format="reference" />
        <attr name="eb_right_icon_visible" format="boolean" />
        <attr name="eb_et_hint" format="string" />
        <attr name="eb_et_enable" format="boolean" />
        <attr name="eb_et_content" format="string" />
        <attr name="eb_top_line_visible" format="boolean" />
        <attr name="eb_bottom_line_visible" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ItemEditBar">

        <attr name="ieb_title" format="string" />
        <attr name="ieb_must_fill" format="boolean" />

        <attr name="ieb_edit_enable" format="boolean" />
        <attr name="ieb_edit_hint" format="string" />
        <attr name="ieb_edit_content" format="string" />

        <attr name="ieb_unit_visible" format="boolean" />
        <attr name="ieb_unit_text" format="string" />

        <attr name="ieb_click_status" format="boolean" />

        <attr name="android:inputType" />

    </declare-styleable>

    <style name="Text_Dark_Content_Style">
        <item name="android:textSize">@dimen/item_title_size</item>
        <item name="android:textColor">#223b53</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_checkbox</item>
    </style>

</resources>