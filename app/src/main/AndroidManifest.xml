<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xyj.strokeaid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".app.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.NewPatientMedicalRecordActivity"></activity>
        <activity android:name=".activity.stroke.StrokeOperationAfterActivity" />
        <activity android:name=".activity.stroke.StrokeOperationOnActivity" />
        <activity android:name=".activity.stroke.StrokeOperationBeforeActivity" />
        <activity android:name=".activity.detection.ImagingCheckActivity" />
        <activity android:name=".activity.detection.PatientArrivalCtActivity" />
        <activity
            android:name=".activity.detection.IllnessRecordActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.newapoplexy.NewChestXRayActivity" />
        <activity android:name=".activity.newapoplexy.RelationPatientInfoActivity" />
        <activity
            android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.login.LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <meta-data
            android:name="android.max_aspect"
            android:value="2.4" /> <!-- 适配华为（huawei）刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" /> <!-- 适配小米（xiaomi）刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />
        <meta-data
            android:name="design_width_in_dp"
            android:value="360" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="640" />

        <activity
            android:name=".activity.stroke.EmergencyDoctorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.TriageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.set.SetActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.StrokeMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.newapoplexy.NewApoplexyInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.set.AccountActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.GreenChannelOutcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.EcgExamnationMainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisDocReceiveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisContraindicationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisIndicationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.StrokeNihssActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisInformedConsentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.StrokeThrombolysisIntravenousActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisComplicationsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.StrokeThriveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.ThrombolysisDelayActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.common.PatientGreenChannelActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.VitalSignsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.stroke.PremorbidMrsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.stroke.FastEdActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.stroke.GetInvolvedIndicationsActivity" />
        <activity android:name=".activity.stroke.GetInvolvedContraindicationsActivity" />
        <activity android:name=".activity.stroke.GetInvolvedInformedConsentActivity" />

        <receiver
            android:name=".receiver.MyReceiver"
            android:exported="false" />
    </application>

</manifest>